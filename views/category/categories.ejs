<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Kategoriler</h1>
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <li class="breadcrumb-item text-muted">
                    <a href="/admin" class="text-muted text-hover-primary">Anasayfa</a>
                </li>
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <li class="breadcrumb-item text-muted">Kategori İşlemleri</li>
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <li class="breadcrumb-item text-muted">Kategoriler</li>
            </ul>
        </div>
        <div class="d-flex align-items-center gap-2 gap-lg-3">
            <a href="/kategori-siralama" class="btn btn-sm fw-bold btn-primary">Sıralama</a>
            <a href="/kategori-ekle" class="btn btn-sm fw-bold btn-primary">Yeni Ekle</a>
        </div>
    </div>
</div>

<div id="kt_app_content" class="app-content flex-column-fluid">
    <div id="kt_app_content_container" class="app-container container-fluid">
        <div class="card card-docs flex-row-fluid mb-2">
            <div class="card-body fs-6 py-15 px-10 py-lg-15 px-lg-15 text-gray-700">

                <table class="table table-striped table-row-bordered gy-5 gs-7 border rounded" id="item_list">
                    <thead>
                        <tr class="fw-bold fs-6 text-gray-800 px-7">
                            <th>ID</th>
                            <th>Ad</th>
                            <th>Aktif</th>
                            <th>Oluşturma Tarihi</th>
                            <th>Güncelleme Tarihi</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%_ categories.forEach(item =>{ _%>
                            <tr class="object-item" data-id= "<%= item.id %>" data-name="<%= item.name %>" id="object_<%= item.id %>">
                                <td><%= item.id %></td>
                                <td><%= item.name %></td>
                                <td><%_ if(item.isActive){ _%>
                                    <span class="badge light badge-info">
                                        AKTİF
                                    </span>
                                    <%}else{%>
                                    <span class="badge light badge-danger">
                                        PASİF
                                    </span>
                                    <% } %>
                                </td>
                                <td><%= moment(item.createdAt).format(shortDateFormat) %></td>
                                <td><%= moment(item.updatedAt).format(shortDateFormat) %></td>
                                <td>
                                    <div>
                                        <a href="/kategori-guncelle/<%=item.id%>" class="btn btn-icon btn-secondary"><img src="assets/media/icons/duotune/general/gen055.svg"/></a>
                                        <a class="btn btn-danger btn-icon remove-item">
                                            <span class="svg-icon svg-icon-1 svg-icon-light">
                                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M5 9C5 8.44772 5.44772 8 6 8H18C18.5523 8 19 8.44772 19 9V18C19 19.6569 17.6569 21 16 21H8C6.34315 21 5 19.6569 5 18V9Z" fill="currentColor"/>
                                                    <path opacity="0.5" d="M5 5C5 4.44772 5.44772 4 6 4H18C18.5523 4 19 4.44772 19 5V5C19 5.55228 18.5523 6 18 6H6C5.44772 6 5 5.55228 5 5V5Z" fill="currentColor"/>
                                                    <path opacity="0.5" d="M9 4C9 3.44772 9.44772 3 10 3H14C14.5523 3 15 3.44772 15 4V4H9V4Z" fill="currentColor"/>
                                                </svg>
                                            </span>
                                        </a>
                                    </div>
                                </td>
                            </tr>

                        <%_ }) _%>
                        
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" id="delete-item-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Kategori Sil</h5>
                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal">
                    <span class="svg-icon svg-icon-2x"></span>
                </div>
                <!--end::Close-->
            </div>
            <div class="modal-body">

                <form action="deleteCategoryAjax" role="form" id="category_delete_form" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="id" id="delete_object_id" />
                        <p><strong id="delete_object_name"></strong> kategorisini silmek istediğinize emin misiniz?</p>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-dark btn-outline" data-bs-dismiss="modal">VAZGEÇ</button>
                        <button type="submit" class="btn btn-primary">EVET</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<script src="assets/plugins/custom/datatables/datatables.bundle.js"></script>
<script src="assets/plugins/custom/prismjs/prismjs.bundle.js"></script>
<script src="../assets/global/plugins/jquery-form/jquery.form.js"></script>

<script>

    $(document).ready(function () {
        var table = $('#item_list').DataTable({});
    })

    $('#item_list').on('click', '.remove-item', function () {
        var id = $(this).closest('.object-item').data('id')
        var name = $(this).closest('.object-item').data('name')

        $('#delete_object_id').val(id)

        $('#delete_object_name').text(name)
        $('#delete-item-modal').modal('show')
    })
    
    $('#category_delete_form').ajaxForm({
        beforeSubmit: function (arr) {
            //global.showLoader()

        },
        beforeSend: function (e) {

            //global.showLoader();
        },
        complete: function (result) {

            console.log(result.responseJSON)
            
            let removedIds = result.responseJSON.removedIds

            var table = $('#item_list').DataTable();
            removedIds.forEach(id => {
                var removeReference = $('#object_' + id)
                
                table
                    .row(removeReference)
                    .remove()
            })

            table.draw()

            $('#delete-item-modal').modal('hide')
            
            if (result.responseJSON.isSuccess) {
                toastr.success(result.responseJSON.message)
            }
            else {
                toastr.error(result.responseJSON.message)
            }
            
            //global.hideLoader()
        },
    })
</script>
