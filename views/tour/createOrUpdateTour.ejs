<script>
    let rawDayList = []

    $(document).ready(function(){
        
        $('#day, #sequence, #persons').inputmask({
            mask: '9',
            repeat: 12,
            greedy: !1
        })
        $('#price').inputmask({
            'alias': 'decimal',
            rightAlign: false,
            showMaskOnHover: false,
            'autoGroup': false,
            'digits': 2,
            'digitsOptional': false,
            'placeholder': '0.00',
            autoGroup: true,
            allowMinus: false,
            radixPoint: '.'
        })

        $("#started_at, #finished_at").flatpickr();

        tinymce.init({
            selector: "#overview",
            height:'480',
            plugins: "code",
            setup: function (editor) {
                editor.on('change', function () {
                    editor.save();
                });
            }
        })

        let amenities = document.querySelector("#amenities")
        let initAmenities = new Tagify(amenities)

        rawDayList = $('#raw_day_list').text() != '' ? JSON.parse($('#raw_day_list').text()) : []

        rawDayList.forEach(item => {
            
            //custom accoridon item
            let dayItem = $('<div style="position:relative;">').addClass('day-item')
            let accordionBtn = $('<button>').addClass('accordion-btn').append('Gün')
            let panel = $('<div>').addClass('panel').attr('style', 'display:none;')
            let dayRemoveBtn = $('<i class="fa fa-trash fs-2x day-remove-btn" style="position:absolute; right:12px; top:12px; cursor:pointer;"></i>')

            dayRemoveBtn.on('click', function(){
                dayItem.remove()
            })

            dayItem.append(dayRemoveBtn).append(accordionBtn).append(panel)

            //textarea item
            let textareaContent = $('<div>').addClass('form-floating mb-2')
            let textarea = $('<textarea style="height: 100px">').addClass('form-control tour-plan-description').val(item.description)
            let textareaLabel = $('<label>').append('Açıklama')
            
            textareaContent.append(textarea).append(textareaLabel)
            panel.append(textareaContent)
            dayItem.append(panel)

            //time add btn
            let addTimeButton = $('<button style="margin-bottom:10px;">').addClass('btn btn-light-info').append('<i class="fa-solid fa-plus me-2"></i>').append('Zaman Ekle')
            panel.append(addTimeButton)

            $('#day_list').append(dayItem)

            accordionBtn.get(0).addEventListener("click", function(e) {
                e.preventDefault()
                this.classList.toggle("active");
                var panel = this.nextElementSibling;
                
                if (panel.style.display == 'none') {
                    panel.style.display = 'block';
                } else {
                    panel.style.display = "none";
                } 
            });

            //timeItems add
            if(item.timeItems.length > 0){
                let itemTimeItems = item.timeItems

                itemTimeItems.forEach(element => {
                    
                    let timeItem = $('<div style="position:relative;">').addClass('time-item')
                    let pickerDiv = $('<div style="position:relative;">')
                    let timePickerInput = $('<input style="margin-bottom:5px;">').addClass('form-control form-control-solid')
                    .attr('placeholder', 'Günün herhangi bir saatini giriniz')
                    .val(element.time)
                    
                    //textarea item
                    let textareaContent = $('<div style="margin-bottom:15px;">').addClass('rounded border d-flex flex-column p-10')
                    let textarea = $('<textarea style="height: 100px">')
                        .addClass('form-control time-description')
                        .attr('data-kt-autosize', 'true')
                        .val(element.timeDescription)

                    let removeBtn = $(`<div class="remove-time-btn" style="position:absolute; right:0; z-index:1; top:45%; display:none; cursor:pointer;">
                                        <span class="svg-icon svg-icon-5x"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path opacity="0.3" d="M12 10.6L14.8 7.8C15.2 7.4 15.8 7.4 16.2 7.8C16.6 8.2 16.6 8.80002 16.2 9.20002L13.4 12L12 10.6ZM10.6 12L7.8 14.8C7.4 15.2 7.4 15.8 7.8 16.2C8 16.4 8.3 16.5 8.5 16.5C8.7 16.5 8.99999 16.4 9.19999 16.2L12 13.4L10.6 12Z" fill="currentColor"/>
                                        <path d="M22 12C22 17.5 17.5 22 12 22C6.5 22 2 17.5 2 12C2 6.5 6.5 2 12 2C17.5 2 22 6.5 22 12ZM13.4 12L16.2 9.20001C16.6 8.80001 16.6 8.19999 16.2 7.79999C15.8 7.39999 15.2 7.39999 14.8 7.79999L12 10.6L9.2 7.79999C8.8 7.39999 8.2 7.39999 7.8 7.79999C7.4 8.19999 7.4 8.80001 7.8 9.20001L10.6 12L7.8 14.8C7.4 15.2 7.4 15.8 7.8 16.2C8 16.4 8.3 16.5 8.5 16.5C8.7 16.5 9 16.4 9.2 16.2L12 13.4L14.8 16.2C15 16.4 15.3 16.5 15.5 16.5C15.7 16.5 16 16.4 16.2 16.2C16.6 15.8 16.6 15.2 16.2 14.8L13.4 12Z" fill="currentColor"/>
                                        </svg></span>
                                        </div>`)
                    
                    let pickerClearBtn = $('<i class="fa fa-eraser fs-2x picker-clear-btn" style="position:absolute; right:8px; top:8px; cursor:pointer;"></i>')
                    
                    textareaContent.append(textarea)
                    pickerDiv.append(pickerClearBtn).append(timePickerInput)
                    timeItem.append(removeBtn).append(pickerDiv).append(textareaContent)
                    
                    timeItem.hover(function(){
                        removeBtn.css('display','block')
                    }, function(){
                        removeBtn.css('display','none')
                    })

                    removeBtn.on('click', function(){
                        $(this).closest('.time-item').remove()
                    })

                    timePickerInput.flatpickr({
                        enableTime: true,
                        noCalendar: true,
                        dateFormat: "H:i",
                    })
                    
                    pickerClearBtn.on('click', function(){
                        timePickerInput.flatpickr({
                        enableTime: true,
                        noCalendar: true,
                        dateFormat: "H:i",
                    }).clear()

                    })

                    panel.append(timeItem)
                });

            }

            addTimeButton.click(function(e){
                e.preventDefault()

                let timeItem = $('<div style="position:relative;">').addClass('time-item')
                let pickerDiv = $('<div style="position:relative;">')
                let timePickerInput = $('<input style="margin-bottom:5px;">').addClass('form-control form-control-solid')
                .attr('placeholder', 'Günün herhangi bir saatini giriniz')
                
                //textarea item
                let textareaContent = $('<div style="margin-bottom:15px;">').addClass('rounded border d-flex flex-column p-10')
                let textarea = $('<textarea style="height: 100px">').addClass('form-control time-description').attr('data-kt-autosize', 'true')
                //let textareaLabel = $('<label class="form-label">').append('Açıklama').attr('for', "floatingTextarea2")

                let removeBtn = $(`<div class="remove-time-btn" style="position:absolute; right:0; z-index:1; top:45%; display:none; cursor:pointer;">
                                    <span class="svg-icon svg-icon-5x"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path opacity="0.3" d="M12 10.6L14.8 7.8C15.2 7.4 15.8 7.4 16.2 7.8C16.6 8.2 16.6 8.80002 16.2 9.20002L13.4 12L12 10.6ZM10.6 12L7.8 14.8C7.4 15.2 7.4 15.8 7.8 16.2C8 16.4 8.3 16.5 8.5 16.5C8.7 16.5 8.99999 16.4 9.19999 16.2L12 13.4L10.6 12Z" fill="currentColor"/>
                                    <path d="M22 12C22 17.5 17.5 22 12 22C6.5 22 2 17.5 2 12C2 6.5 6.5 2 12 2C17.5 2 22 6.5 22 12ZM13.4 12L16.2 9.20001C16.6 8.80001 16.6 8.19999 16.2 7.79999C15.8 7.39999 15.2 7.39999 14.8 7.79999L12 10.6L9.2 7.79999C8.8 7.39999 8.2 7.39999 7.8 7.79999C7.4 8.19999 7.4 8.80001 7.8 9.20001L10.6 12L7.8 14.8C7.4 15.2 7.4 15.8 7.8 16.2C8 16.4 8.3 16.5 8.5 16.5C8.7 16.5 9 16.4 9.2 16.2L12 13.4L14.8 16.2C15 16.4 15.3 16.5 15.5 16.5C15.7 16.5 16 16.4 16.2 16.2C16.6 15.8 16.6 15.2 16.2 14.8L13.4 12Z" fill="currentColor"/>
                                    </svg></span>
                                    </div>`)
                
                let pickerClearBtn = $('<i class="fa fa-eraser fs-2x picker-clear-btn" style="position:absolute; right:8px; top:8px; cursor:pointer;"></i>')
                
                textareaContent.append(textarea)
                pickerDiv.append(pickerClearBtn).append(timePickerInput)
                timeItem.append(removeBtn).append(pickerDiv).append(textareaContent)
                
                timeItem.hover(function(){
                    removeBtn.css('display','block')
                }, function(){
                    removeBtn.css('display','none')
                })

                removeBtn.on('click', function(){
                    $(this).closest('.time-item').remove()
                })

                timePickerInput.flatpickr({
                    enableTime: true,
                    noCalendar: true,
                    dateFormat: "H:i",
                })
                
                pickerClearBtn.on('click', function(){
                    timePickerInput.flatpickr({
                    enableTime: true,
                    noCalendar: true,
                    dateFormat: "H:i",
                }).clear()

                })

                $(this).closest('.panel').append(timeItem)
            })
        
        });
    })
 
    $('#item_save_form').ajaxForm({
        beforeSubmit: function (arr) {

            if ($('#category').val() == "") {
                toastr.warning("Kategori seçiniz");
                $('#category').focus();
                return false;
            }
            if ($('#title').val() == "") {
                toastr.warning("Başlık giriniz");
                $('#title').focus();
