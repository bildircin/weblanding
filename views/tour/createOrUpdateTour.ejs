    function ToURL(val) {
        var retVal =
        val.toLocaleLowerCase('tr-TR')
        .replaceAll('ç', 'c')
        .replaceAll('ı', 'i')
        .replaceAll('ğ', 'g')
        .replaceAll('ö', 'o')
        .replaceAll('ş', 's')
        .replaceAll('ü', 'u')
        .replaceAll('(', '-')
        .replaceAll(')', '-')
        .replaceAll('&', '-ve-')
        .replaceAll('#', '')
        .replaceAll('?', '')
        .replaceAll('.', '')
        .replaceAll(',', '')
        .replaceAll('-', '')
        .replaceAll(' ', '-')
        .replaceAll('/', '-')
        .replaceAll('\\', '-')
        .replaceAll('--', '-')
        .replaceAll('  ', '')

        return retVal;
    }
    
