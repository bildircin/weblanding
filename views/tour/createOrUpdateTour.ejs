    function getTourPlanList(){
        let preDayItems = $('#day_list > .day-item')

        let dayItems = []

        for (let i = 0; i < preDayItems.length; i++) {
            const item = $(preDayItems[i])

            let description = item.find('.tour-plan-description').val()
            let preTimeItems = item.find('.time-item')
            let timeItems = []

            for (let j = 0; j < preTimeItems.length; j++) {
                const item = $(preTimeItems[j])
                
                let time = item.find('.flatpickr-input').val()
                let timeDescription = item.find('.time-description').val()

                if ((time != '' || time != null || time != undefined) && 
                (timeDescription != '' || timeDescription != null || timeDescription != undefined)) {
                    
                    timeItems.push({
                        time:time.trim(),
                        timeDescription:timeDescription.trim()
                    })
                }
            }

            dayItems.push({
                description: description,
                timeItems: timeItems
            })
        }
        return dayItems;
    }

